/*Define a struct with enum Gender and print person's gender.*?
#include <stdio.h>

enum Gender {
    MALE,
    FEMALE,
    OTHER
};

struct Person {
    char name[50];
    enum Gender gender;
};

int main() {
    struct Person p;
    char *genderNames[] = {"MALE", "FEMALE", "OTHER"};

    printf("Enter name: ");
    scanf(" %[^\n]", p.name);

    int choice;
    printf("Enter gender (0-MALE, 1-FEMALE, 2-OTHER): ");
    scanf("%d", &choice);
    p.gender = (enum Gender)choice;

    printf("Name: %s\n", p.name);
    printf("Gender: %s\n", genderNames[p.gender]);

    return 0;
}
