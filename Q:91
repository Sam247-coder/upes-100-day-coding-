/* Remove all vowels from a string.*/
#include <stdio.h>
#include <string.h>

int main() {
    char str[100], result[100];
    int i, j = 0;

    printf("Enter a string: ");
    gets(str);   

    for (i = 0; str[i] != '\0'; i++) {
        char c = str[i];
        // Check if c is NOT a vowel
        if (!(c=='a' || c=='e' || c=='i' || c=='o' || c=='u' ||
              c=='A' || c=='E' || c=='I' || c=='O' || c=='U')) {
            result[j++] = c;
        }
    }

    result[j] = '\0'; // End the string

    printf("String without vowels: %s", result);
    return 0;
}
