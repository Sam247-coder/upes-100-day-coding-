/*Define an enum for traffic lights (RED, YELLOW, GREEN) and print 'Stop', 'Wait', or 'Go' based on its value.*/
#include <stdio.h>

enum Traffic {RED, YELLOW, GREEN};

int main() {
    enum Traffic t;
    for(t = RED; t <= GREEN; t++) {
        if(t == RED)
            printf("Stop\n");
        else if(t == YELLOW)
            printf("Wait\n");
        else if(t == GREEN)
            printf("Go\n");
    }
    return 0;
}
