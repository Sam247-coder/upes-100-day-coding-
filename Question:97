/* Print the initials of a name.*/
#include <stdio.h>
#include <ctype.h>

int main() {
    char name[100];
    int i = 0;

    printf("Enter your full name: ");
    gets(name);

    if (name[0] != ' ')
        printf("%c", toupper(name[0]));

    for (i = 1; name[i] != '\0'; i++) {
        if (name[i] == ' ' && name[i + 1] != ' ')
            printf("%c", toupper(name[i + 1]));
    }

    return 0;
}
