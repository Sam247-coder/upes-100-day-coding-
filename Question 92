/* Find the first repeating lowercase alphabet in a string. */
#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int freq[26] = {0};   // For 'a' to 'z'

    printf("Enter a string: ");
    scanf("%s", str);

    for (int i = 0; str[i] != '\0'; i++) {
        char c = str[i];

        if (c >= 'a' && c <= 'z') {      // Only lowercase letters
            if (freq[c - 'a'] == 1) {   // If already seen once â†’ repeating
                printf("First repeating lowercase alphabet: %c\n", c);
                return 0;
            }
            freq[c - 'a']++; 
        }
    }

    printf("No repeating lowercase alphabet found.\n");
    return 0;
}
